{
  "rtl": true,
  "dir": {
    "dev": "public",
    "prod": "build"
  },
  "style": {
    "src": "src/scss/**/*.scss",
    "dest": "assets/css"
  },
  "script": {
    "src": [
      "src/js/utils.js",
      "src/js/detector.js",
      "src/js/node.js",
      "src/js/**/!(utils | detector | node | emoji-button | flatpickr)*.js",
      "!src/js/emoji-button.js",
      "!src/js/flatpickr.js",
      "!src/js/theme.js",
      "src/js/theme.js",
      "!src/js/live-*.js",
      "!src/js/config.navbar-vertical.js"
    ],
    "configNavbar": "src/js/config.navbar-vertical.js",
    "liveSrc": [
      "src/js/utils.js",
      "src/js/live-config.js",
      "src/js/detector.js",
      "src/js/node.js",
      "src/js/**/!(utils | detector | live-config  | node | emoji-button | flatpickr)*.js",
      "!src/js/emoji-button.js",
      "!src/js/flatpickr.js",
      "!src/js/theme.js",
      "src/js/theme.js",
      "!src/js/demo-mode.js",
      "!src/js/config.navbar-vertical.js"
    ],
    "dest": "assets/js"
  },
  "pug": {
    "base": "src/pug",
    "src": {
      "all": "src/pug/**/*.pug",
      "pages": [
        "*.pug",
        "authentication/**/*.pug",
        "plugins/**/*.pug",
        "pages/**/*.pug",
        "components/**/*.pug",
        "forms/*.pug",
        "docs/*.pug",
        "documentation/*.pug",
        "utilities/*.pug",
        "pages/*.pug",
        "e-commerce/*.pug",
        "home/*.pug",
        "demo/*.pug",
        "email/*.pug"
      ]
    },
    "dest": ""
  },
  "watch": ["assets/img", "assets/video", "vendors"]
}
