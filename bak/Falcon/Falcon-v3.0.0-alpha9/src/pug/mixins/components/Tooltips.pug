mixin Tooltip(config)
  button.btn.btn-secondary.btn-sm.m-1(type='button', data-toggle='tooltip', data-placement=config.placement, title=config.text)&attributes(attributes)
    = '\n'
    | #{config.text}
    = '\n'
  = '\n'

