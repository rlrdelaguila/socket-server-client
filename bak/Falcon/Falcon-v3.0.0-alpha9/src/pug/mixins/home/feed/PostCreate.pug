include Mixins

mixin PostCreate
  .card&attributes(attributes)
    .card-header.bg-light.overflow-hidden
      .d-flex.align-items-center
        +Avatar({img: 'team/1.jpg', size: 'm'})
        .flex-1.ml-2
          h5.mb-0.fs-0 Create post
    .card-body.p-0
      form
        textarea.shadow-none.form-control.border-0.rounded-0.resize-none.px-card(placeholder="What do you want to talk about?" rows='4')
        .d-flex.align-items-center.border-y.px-card.mt-1
          label(for='hash-tags').text-nowrap.mb-0.mr-2
            span.fas.fa-plus.mr-1.fs--2
            span.font-weight-medium.fs--1 Add hashtag
          input.form-control.border-0.fs--1.shadow-none#hash-tags(type="text" placeholder="Help the right person to see")

        .row.g-0.justify-content-between.mt-3.px-card.pb-3
          .col
            button.btn.btn-light.btn-sm.rounded-pill.shadow-none.d-inline-flex.align-items-center.fs--1.mb-0.mr-1(type='button')
              img.cursor-pointer(src=`${CWD}assets/img/illustrations/image.svg` width=17 alt="")
              span.ml-2.d-none.d-md-inline-block Image
            button.btn.btn-light.btn-sm.rounded-pill.shadow-none.d-inline-flex.align-items-center.fs--1.mr-1(type='button')
              img.cursor-pointer(src=`${CWD}assets/img/illustrations/calendar.svg` width=17 alt="")
              span.ml-2.d-none.d-md-inline-block Event
            button.btn.btn-light.btn-sm.rounded-pill.shadow-none.d-inline-flex.align-items-center.fs--1.mr-1(type='button')
              img.cursor-pointer(src=`${CWD}assets/img/illustrations/location.svg` width=17 alt="")
              span.ml-2.d-none.d-md-inline-block.text-nowrap Check in
          .col-auto
            .dropdown.d-inline-block.mr-1
              button#dropdownMenuButton.btn.btn-sm.dropdown-toggle.px-1(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                span.fas.fa-globe-americas
              .dropdown-menu.dropdown-menu-right(aria-labelledby='dropdownMenuButton')
                a.dropdown-item(href='#') Public
                a.dropdown-item(href='#') Private
                a.dropdown-item(href='#') Draft
            button.btn.btn-primary.btn-sm.px-4.px-sm-5(type='submit') Share