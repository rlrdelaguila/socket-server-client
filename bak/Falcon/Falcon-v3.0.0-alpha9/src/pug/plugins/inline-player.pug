extends ../layouts/LayoutComponent

block append variables
  - var firstParent ='plugins'              
  - var currentPage = 'inline-player' 
  
block prepend styles
  link(href=`${CWD}vendors/plyr/plyr.css`, rel='stylesheet')

block prepend scripts
  script(src=`${CWD}vendors/plyr/plyr.polyfilled.min.js`) 

block append content
  +PageHeader({ title: 'Inline Player' })
    p.mt-2 A simple, lightweight, accessible and customizable HTML5, YouTube and Vimeo media player that supports modern browsers.
    a(href='https://github.com/sampotts/plyr#try-plyr-online' target='_blank').btn.btn-link.pl-0.btn-sm  Plyr Documentation
      span.fas.fa-chevron-right.ml-1.fs--2
  .row.g-0
    .col-lg-6.pr-lg-2
      .card.mb-3
        .card-header
          h5.mb-0 Youtube Player
        .card-body.bg-light
          +componentCard
            .player.rounded-lg(data-plyr-provider='youtube' data-plyr-embed-id='bTqVqk7FSmY')    
    .col-lg-6.pl-lg-2  
      .card.mb-3
        .card-header
          h5.mb-0 Vimeo Player
        .card-body.bg-light
          +componentCard
            .player.rounded-lg(data-plyr-provider='vimeo' data-plyr-embed-id='76979871')
    .col-lg-12
      .card.mb-3
        .card-header
          h5.mb-0 Stylesheet
        .card-body.bg-light
          +componentCardLib
            link(href=`vendors/plyr/plyr.css`, rel='stylesheet')
    .col-lg-12
      .card.mb-3
        .card-header
          h5.mb-0 Javascript
        .card-body.bg-light
          +componentCardLib
            script(src=`vendors/plyr/plyr.polyfilled.min.js`)
