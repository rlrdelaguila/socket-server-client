extends ../layouts/LayoutComponent

append variables
  - var firstParent = 'plugins'              
  - var currentPage = 'inline-player'
  - var today = new Date();
  - var toString = (number) => number.toString().padStart(2, '0');
  - var date = toString(today.getDate())
  - var month = today.getMonth();
  - var currentMonth = month > 11 ? toString(1) : toString(month + 1);
  -
    var events = [
      {
        title: 'Bootcamp',
        start: `${today.getFullYear()}-${currentMonth}-${date}`
      }
    ]

prepend styles
  link(href=`${CWD}vendors/fullcalendar/main.min.css`, rel='stylesheet')

prepend scripts
  script(src=`${CWD}vendors/fullcalendar/main.min.js`)

append content
  +PageHeader({title: 'FullCalendar'})
    p.mt-2 Full-sized drag &amp; drop event calendar.
    a(href='https://fullcalendar.io/docs' target='_blank').btn.btn-link.pl-0.btn-sm  FullCalendar Documentation
      span.fas.fa-chevron-right.ml-1.fs--2
  .card.mb-3
    .card-header.bg-light
      h5.mb-2 Example
      p.mb-0 Basic example of FullCalendar with default options in #{name}. You can also pass the extra options using 
        code data-calendar 
        | attribute.  
        a(href=`${CWD}calendar.html` target="_blank") See advanced implementation of fullCalendar 
    .card-body
      +componentCard
        div(data-calendar!={events})
  .card.mb-3
    .card-header
      h5.mb-0 Stylesheet
    .card-body.bg-light
      +componentCardLib
        link(href=`vendors/fullcalendar/main.min.css`, rel='stylesheet')
  .card.mb-3
    .card-header
      h5.mb-0 Javascript
    .card-body.bg-light
      +componentCardLib
        script(src=`vendors/fullcalendar/main.min.js`)
