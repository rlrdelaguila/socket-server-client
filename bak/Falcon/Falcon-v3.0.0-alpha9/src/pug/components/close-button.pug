extends ../layouts/LayoutComponent
include ../mixins/components/CloseButton

append variables
  - var firstParent = 'components'              
  - var currentPage = 'close-button'
  -
    var pageHeader = {
      title: 'Close button',
      description: "A generic close button for dismissing content like modals and alerts.",
      url: `https://v5.getbootstrap.com/docs/${bootstrapVersion}/components/close-button/`,
      linkText: 'Close Button on Bootstrap'
    }

block component
  +PageHeader(pageHeader)
  .card.mb-3
    .card-header
      +DocCardHeader('Example')
        +CloseButtonExampleDescription.mt-2.mb-0

    .card-body.bg-light
      +componentCard
        +CloseButtonExample
  .card.mb-3
    .card-header
      +DocCardHeader('White variant')
        +CloseButtonWhiteVarientDescription.mt-2.mb-0
    .card-body.bg-light
      +componentCard
        .bg-1000.rounded.p-3
          +CloseButtonWhiteVariant

