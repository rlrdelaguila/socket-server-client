extends ../../layouts/LayoutComponent
include ../../mixins/components/navbar/Navbar

append variables
  - var CWD = '../../';
  - var firstParent = 'components'              
  - var secondParent = 'navbar'              
  - var currentPage = 'default'
  -
    var pageHeader = {
      title: 'Navbar',
      description: "Documentation and examples for Bootstrapâ€™s powerful, responsive navigation header, the navbar. Includes support for branding, navigation, and more, including support for Bootstrap collapse plugin.",
      url: `https://v5.getbootstrap.com/docs/${bootstrapVersion}/components/navbar/`,
      linkText: 'Navbar on Bootstrap'
    }

append content
  +PageHeader(pageHeader)
  .card.mb-3
    .card-header
      h5.mb-0(data-anchor) Navbar Dark
    .card-body.bg-light
      +componentCard
        +Navbar('navbarDarkExample').bg-dark

  .card.mb-3
    .card-header
      h5.mb-0(data-anchor) Navbar Primary
    .card-body.bg-light
      +componentCard
        +Navbar('navbarPrimaryExample').bg-primary