extends ../layouts/LayoutComponent
include ../mixins/components/Card


append variables
  - var firstParent = 'components'              
  - var currentPage = 'cards'
  -
    var pageHeader = {
      title: 'Card',
      description: `${name}'s cards provide a flexible and extensible content container with multiple variants and options.`,
      url: `https://v5.getbootstrap.com/docs/${bootstrapVersion}/components/card/`,
      linkText: 'Card on Bootstrap'
    }

block component
  +PageHeader(pageHeader)
  .row.mb-3
    .col-xl-6.pr-xl-2
      .card.mb-3.h-lg-100
        .card-header
          +DocCardHeader('Basic Example')
        .card-body.bg-light.overflow-hidden
          +componentCard
            +CardBasicDemo
    .col-xl-6.pl-xl-2
      .card.mb-3.h-lg-100
        .card-header
          +DocCardHeader('Card with list')
        .card-body.bg-light
          +componentCard
            +CardUserPreferences

  .card.mb-3
    .card-header
      +DocCardHeader('Card with image')
    .card-body.bg-light.overflow-hidden
      +componentCard
        +CardWithImageDemo

  .card.mb-3
    .card-header
      +DocCardHeader('Notification')
    .card-body.bg-light.overflow-hidden
      +componentCard
        .fs--1(style="max-width: 25rem;")
          +Notification({
            avatar: {size: '2xl', img: 'team/1.jpg'},
            body: '<strong>Emma Watson</strong> replied to your comment : "Nice Dashboard üòç"',
            time: 'Just now',
            emoji: 'üí¨',
          })
  .card.mb-3
    .card-header
      +DocCardHeader('Notification Group')
    .card-body.bg-light.overflow-hidden
      +componentCard
        +CardNotification(style="max-width: 20rem;")

  .card.mb-3
    .card-header
      +DocCardHeader('Background')
    .card-body.bg-light
      +componentCard
        +CardOverlayDemo({
          title: 'Card title', 
          body: 'Some quick example text to build on the card title and make up the bulk of the card\'s content.', 
          img: 'generic/3.jpg',
          attrs: {
            style: 'max-width: 30rem',
          }
        }).align-items-end.d-flex
  
  .card.mb-3
    .card-header
      +DocCardHeader('Card Groups')
    .card-body.bg-light.overflow-hidden
      +componentCard
        +CardGroupDemo

  .card.mb-3
    .card-header
      +DocCardHeader('Card styles')
        +CardStylesDescription.mt-2.mb-0
    .card-body
      +componentCard
        +CardStyleDemo
                
