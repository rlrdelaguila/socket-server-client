extends ../layouts/LayoutTheme
include ../mixins/e-commerce/Mixins
include ../mixins/e-commerce/ProductGrid

append variables
  - var CWD = '../'
  - var firstParent ='e-commerce'              
  - var currentPage = 'product-grid' 

prepend styles
  link(href=`${CWD}vendors/swiper/swiper-bundle.min.css`, rel='stylesheet')

prepend scripts
  script(src=`${CWD}vendors/swiper/swiper-bundle.min.js`)

append content
  .card.mb-3
    .card-body
      .row.flex-between-center
        .col-sm-auto.mb-2.mb-sm-0
          h6.mb-0 Showing 1-24 of 205 Products
        .col-sm-auto
          .row.gx-2.align-items-center
            .col-auto
              form.row.gx-2
                .col-auto
                  small Sort by:
                .col-auto     
                    select.form-select.form-select-sm(aria-label='Bulk actions')
                      option(selected='') Best Match
                      option(value='Refund') Newest
                      option(value='Delete') Price
            .col-auto.pr-0          
              a(href=`${CWD}e-commerce/product-list.html` data-toggle="tooltip" data-placement="top" title="Product List").text-600.px-1
                span.fas.fa-list-ul
  .card.mb-3
    .card-body
      .row
        each product in products
          +ProductGrid(product).col-md-6.col-lg-4      
    .card-footer.bg-light.d-flex.justify-content-center
      div
        button(type='button' disabled data-toggle="tooltip" data-placement="top" title="Prev").btn.btn-falcon-default.btn-sm.mr-2
          span.fas.fa-chevron-left
        a.btn.btn-sm.btn-falcon-default.text-primary.mr-2(href="#!") 1
        a.btn.btn-sm.btn-falcon-default.mr-2(href="#!") 2
        a.btn.btn-sm.btn-falcon-default.mr-2(href="#!") 
          span.fas.fa-ellipsis-h
        a.btn.btn-sm.btn-falcon-default.mr-2(href="#!") 35
        button(type='button' data-toggle="tooltip" data-placement="top" title="Next").btn.btn-falcon-default.btn-sm
          span.fas.fa-chevron-right      