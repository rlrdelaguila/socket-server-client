extends ../layouts/LayoutTheme
include ../mixins/e-commerce/Checkout
include ../mixins/common/Form

append variables
  - var CWD = '../'
  - var firstParent ='e-commerce'
  - var currentPage = 'checkout'

append content
  .row.g-0
    .col-xl-4.order-xl-1.pl-xl-2
      +OrderSummary.mb-3
    .col-xl-8.pr-xl-2
      +ShippingAddress
      .card
        .card-header.bg-light
          h5.mb-0 Payment Method
        .card-body
          form
            +PaymentCreditCard
            +PaymentPaypal
            .border-dashed-bottom.my-5
            +CheckoutFooter





