extends ../layouts/LayoutComponent
include ../mixins/forms/Overview

append variables
  - var firstParent = 'forms'              
  - var currentPage = 'overview'
  -
    var pageHeader = {
      title: 'Form',
      description: 'Examples and usage guidelines for form control styles, layout options, and custom components for creating a wide variety of forms.',
      url: `https://v5.getbootstrap.com/docs/${bootstrapVersion}/forms/overview`,
      linkText: "Forms on Bootstrap"
    };

block component
  +PageHeader(pageHeader)

  .card.mb-3
    .card-body
      .row
        +FormTypes  

  .card.mb-3
    .card-header 
      h5.mb-0(data-anchor) Overview
    .card-body.bg-light
      +FormOverview

  .card.mb-3
    .card-header 
      h5.mb-0(data-anchor) Basic Form
    .card-body.bg-light
      +componentCard
        +FormBasic


